# ==============================================
# Facilita+ Porto Seguro Edition - Environment Variables
# ==============================================

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3000
APP_NAME="Facilita+ Porto Seguro Edition"
APP_VERSION=1.0.0

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://facilita_user:facilita_pass_2024@localhost:5432/facilita_porto
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=facilita_porto
DATABASE_USER=facilita_user
DATABASE_PASSWORD=facilita_pass_2024
DATABASE_SSL=false

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=facilita_jwt_secret_2024_porto_seguro_change_in_production
JWT_REFRESH_SECRET=facilita_refresh_secret_2024_porto_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# PORTO SEGURO SSO INTEGRATION
# ==============================================
PORTO_OAUTH_CLIENT_ID=your_porto_oauth_client_id
PORTO_OAUTH_CLIENT_SECRET=your_porto_oauth_client_secret
PORTO_OAUTH_REDIRECT_URI=http://localhost:3000/auth/porto/callback
PORTO_OAUTH_SCOPE=openid profile email
PORTO_API_BASE_URL=https://api.portoseguro.com.br/v1

# ==============================================
# AWS SERVICES
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=facilita-porto-assets
AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain

# ==============================================
# GOOGLE SERVICES
# ==============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# ==============================================
# PAYMENT GATEWAYS
# ==============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key

# PIX Configuration
PIX_DICT_KEY=your_pix_dict_key
PIX_MERCHANT_NAME="Facilita+ Porto Seguro"
PIX_MERCHANT_CITY="SÃ£o Paulo"

# ==============================================
# COMMUNICATION SERVICES
# ==============================================
# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@facilitaporto.com
SENDGRID_FROM_NAME="Facilita+ Porto Seguro"

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+5511999999999

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=facilita-porto-firebase
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@facilita-porto-firebase.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ==============================================
# EXTERNAL APIS
# ==============================================
# Receita Federal (CPF/CNPJ Validation)
RECEITA_FEDERAL_API_KEY=your_receita_federal_api_key

# Serasa (Credit Score)
SERASA_API_KEY=your_serasa_api_key
SERASA_API_SECRET=your_serasa_api_secret

# ViaCEP (Address Lookup)
VIACEP_API_URL=https://viacep.com.br/ws

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9464

# Log Level
LOG_LEVEL=debug
LOG_FORMAT=json

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=10

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3001
CORS_CREDENTIALS=true

# ==============================================
# SESSION CONFIGURATION
# ==============================================
SESSION_SECRET=facilita_session_secret_change_in_production
SESSION_MAX_AGE=86400000

# ==============================================
# FILE UPLOAD LIMITS
# ==============================================
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ==============================================
# BUSINESS RULES
# ==============================================
# Pricing
FACILITA_COMMISSION_RATE=0.10
PORTO_COMMISSION_RATE=0.15
MIN_SERVICE_VALUE=50.00
MAX_SERVICE_VALUE=5000.00

# SLA Configuration
DEFAULT_SLA_MINUTES=30
EMERGENCY_SLA_MINUTES=15
MAX_PROVIDER_DISTANCE_KM=50

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Hot Reload
HOT_RELOAD=true

# Debug Mode
DEBUG=facilita:*

# Seed Data
SEED_SAMPLE_DATA=true
SEED_ADMIN_EMAIL=admin@facilitaporto.com
SEED_ADMIN_PASSWORD=Admin123!@#

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# Uncomment and configure for production deployment

# DATABASE_SSL=true
# REDIS_TLS=true
# NODE_ENV=production
# LOG_LEVEL=info
# HOT_RELOAD=false
# SEED_SAMPLE_DATA=false

